{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build User Service",
            "type": "shell",
            "command": "mvn",
            "args": [
                "clean",
                "install",
                "-DskipTests"
            ],
            "options": {
                "cwd": "${workspaceFolder}/user-service/user-service"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": "$tsc"
        },
        {
            "label": "Build Product Service",
            "type": "shell",
            "command": "mvn",
            "args": [
                "clean",
                "install",
                "-DskipTests"
            ],
            "options": {
                "cwd": "${workspaceFolder}/product-service/product-service"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": "$tsc"
        },
        {
            "label": "Build Order Service",
            "type": "shell",
            "command": "mvn",
            "args": [
                "clean",
                "install",
                "-DskipTests"
            ],
            "options": {
                "cwd": "${workspaceFolder}/order-service/order-service"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": "$tsc"
        },
        {
            "label": "Build All Services",
            "dependsOn": [
                "Build User Service",
                "Build Product Service",
                "Build Order Service"
            ],
            "dependsOrder": "parallel",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$tsc"
        },
        {
            "label": "Run User Service (Maven)",
            "type": "shell",
            "command": "mvn",
            "args": [
                "spring-boot:run"
            ],
            "options": {
                "cwd": "${workspaceFolder}/user-service/user-service"
            },
            "group": "test",
            "isBackground": true,
            "problemMatcher": {
                "owner": "java",
                "pattern": {
                    "regexp": "^\\s*\\[ERROR\\]\\s*(.*)$",
                    "file": 1,
                    "location": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*Starting.*",
                    "endsPattern": "^.*Started.*"
                }
            }
        },
        {
            "label": "Run Product Service (Maven)",
            "type": "shell",
            "command": "mvn",
            "args": [
                "spring-boot:run"
            ],
            "options": {
                "cwd": "${workspaceFolder}/product-service/product-service"
            },
            "group": "test",
            "isBackground": true,
            "problemMatcher": {
                "owner": "java",
                "pattern": {
                    "regexp": "^\\s*\\[ERROR\\]\\s*(.*)$",
                    "file": 1,
                    "location": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*Starting.*",
                    "endsPattern": "^.*Started.*"
                }
            }
        },
        {
            "label": "Run Order Service (Maven)",
            "type": "shell",
            "command": "mvn",
            "args": [
                "spring-boot:run"
            ],
            "options": {
                "cwd": "${workspaceFolder}/order-service/order-service"
            },
            "group": "test",
            "isBackground": true,
            "problemMatcher": {
                "owner": "java",
                "pattern": {
                    "regexp": "^\\s*\\[ERROR\\]\\s*(.*)$",
                    "file": 1,
                    "location": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*Starting.*",
                    "endsPattern": "^.*Started.*"
                }
            }
        }
    ]
}

